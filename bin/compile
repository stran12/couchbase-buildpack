#!/usr/bin/env bash

set -e

WORK_DIR=$1

echo 'what is in bin'
ls -al bin

echo '-----> couchbase-buildpack: navigating to build dir'
cd bin/libcouchbase && mkdir build && cd build

echo 'what is above me?'
ls -al ../

echo '-----> couchbase-buildpack: configuring'
../cmake/configure

echo '-----> couchbase-buildpack: make'
make

exit 0
